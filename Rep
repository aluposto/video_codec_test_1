conda activate dcvc_env

# upgrade pip/setuptools/wheel to latest
python -m pip install --upgrade pip setuptools wheel

# verify setuptools version (want a recent one)
python -c "import setuptools, sys; print('setuptools', setuptools.__version__, 'python', sys.version)"

# quick smoke-test: does setuptools expose distutils?
python - <<'PY'
import importlib, sys
try:
    import setuptools
    import distutils
    print('distutils import OK,', distutils.__file__)
except Exception as e:
    print('distutils import failed:', type(e).__name__, e)
    sys.exit(1)
PY
